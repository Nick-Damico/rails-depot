= form_for @pay_type do |f|
  - if @pay_type.errors.any?
    #error_explanation
      h2 = "#{pluralize(@pay_type.errors.count, "error")} prohibited this pay_type from being saved:"
      ul
        - @pay_type.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :name
    = f.text_field :name
  .actions = f.submit
